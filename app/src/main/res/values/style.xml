<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DriverButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/component_button</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DriverButton.save" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/component_button_save</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">32dp</item>
    </style>

    <style name="DriverButton.save.car" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/component</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">32dp</item>
    </style>

    <style name="DriverButton.transparent" parent="Widget.Material3.Button">
        <item name="backgroundTint">#00000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:textColor">@color/component_text</item>
    </style>

    <style name="DriverButton.green" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/component_success</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DriverButton.default" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/component</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DriverButton.feedback" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/component</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/component_text</item>
    </style>

    <style name="DriverButton.date" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/component</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/component_text</item>
    </style>

    <style name="DriverEditText.default" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="hintTextColor">@color/teal_700</item>
    </style>

    <style name="DriverProgressBar">
        <item name="android:indeterminateTint">@color/component_text</item>
    </style>

</resources>